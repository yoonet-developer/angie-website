---
import '../styles/global.css'
import Layout from "../layouts/Layout.astro"

import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Button from '../components/Button.astro'

import svgPinkStar from '../assets/pink-star.svg'
import svgRedStar from '../assets/red-star.svg'
import svgIdea from '../assets/idea.svg'
import svgheroContent from '../assets/hero-content.svg'

const approachSteps = [
  {
    step: '01',
    title: 'Discovery & Understanding',
    desc: 'We start by deeply understanding your business, culture, and specific needs through comprehensive consultation',
    icon: 'üîç',
    color: 'bg-blue-100 border-blue-300'
  },
  {
    step: '02', 
    title: 'Talent Curation',
    desc: 'Our rigorous selection process identifies professionals who align with your values and business objectives',
    icon: 'üë•',
    color: 'bg-purple-100 border-purple-300'
  },
  {
    step: '03',
    title: 'Cultural Integration',
    desc: 'We facilitate seamless integration through cultural bridging and comprehensive onboarding processes',
    icon: 'üåâ',
    color: 'bg-green-100 border-green-300'
  },
  {
    step: '04',
    title: 'Ongoing Partnership',
    desc: 'Continuous support, feedback, and optimization ensure long-term success and team development',
    icon: 'üöÄ',
    color: 'bg-yellow-100 border-yellow-300'
  }
]

const differentiators = [
  {
    title: 'Fully Incorporated Filipino Business',
    desc: 'Not just an agency - we\'re a legitimate, fully incorporated business providing stability and professional structure',
    icon: 'üè¢'
  },
  {
    title: 'We Cultivate Careers, Not Just Fill Positions',
    desc: 'Ongoing support, professional development, and career refinement for every team member',
    icon: 'üå±'
  },
  {
    title: 'Physical Collaboration, Not Isolation',
    desc: 'Our team works together in person, fostering genuine collaboration and community',
    icon: 'ü§ù'
  },
  {
    title: 'Community Connection',
    desc: 'Deep roots in Balanga community with healthcare, stability, and local engagement initiatives',
    icon: 'üè†'
  }
]

const principles = [
  {
    principle: 'Stability First',
    explanation: 'We attract professionals who value long-term relationships and sustainable growth over quick turnover',
    visual: '‚öñÔ∏è'
  },
  {
    principle: 'Growth Mindset',
    explanation: 'Every team member has access to continuous learning, skill development, and career advancement opportunities',
    visual: 'üìà'
  },
  {
    principle: 'Community Focus',
    explanation: 'Regular team events, healthcare support, and connection to broader community initiatives create belonging',
    visual: 'üéØ'
  },
  {
    principle: 'Results Through Relationships',
    explanation: 'Strong personal connections and cultural understanding drive exceptional business outcomes',
    visual: 'üí™'
  }
